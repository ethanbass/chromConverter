Package: chromConverter
Title: Chromatographic File Converter
Version: 0.4.2
Authors@R: c(
    person(given = "Ethan", family = "Bass", email = "ethanbass@gmail.com",
                  role = c("aut", "cre"),
                  comment = c(ORCID = "0000-0002-6175-6739")),
